#[[ $VERBOSE -eq 1 ]]\
    #&& cp -vpfr $(pwd)/$CNFOLDER/$CNFOLDER_ROOT/. /\
    #|| cp -pfr $(pwd)/$CNFOLDER/$CNFOLDER_ROOT/. /root


#if [[ -n $CONTRASINAL ]]; then
