pegar(){
    l_ruta=$1
    l_encriptar=$2

    [[ $l_ruta = \~* ]]\
        && ruta_orixe="$PWD/$CNFOLDER/$CNFOLDER_HOME$(echo $l_ruta | cut -d~ -f2-)"\
        || ruta_orixe="$PWD/$CNFOLDER/$CNFOLDER_ROOT$l_ruta"

    [[ l_encriptar -eq 1 ]]\
        && ruta_orixe="$ruta_orixe.7z"

    ruta_destino=$(./src/uteis/crea-ruta -cp $l_ruta)
    ruta_destino=$(dirname $ruta_destino)/$(basename $ruta_destino)

    if [[ $VERBOSE -eq 1 ]]; then
        ruta_destino=$(echo $ruta_destino | sed 's/ran/ran\/proba/g')
        ./src/uteis/crea-ruta -vp $ruta_destino
        cp -vupfr $ruta_orixe $ruta_destino
        #chown -R $USER:$USER $(dirname $ruta_destino)
    else
        ./src/uteis/crea-ruta -p $ruta_destino
        cp -upfr $ruta_orixe $ruta_destino
    fi
}

while read line; do
    # ignore comments and empty lines
    if [[ $line != \#* && -n $line ]]; then
        #encriptar=$(echo $line | cut -d$SEP -f1)
        ruta=$(echo $line | cut -d$SEP -f2)
        distros=$(echo $line | cut -d$SEP -f4)
        encriptar=0

        # if its not distro dependant
        # or the correct distro
        if [[ -z $distros ]] || (echo $distros | grep -w $DISTRO > /dev/null); then
            # if starts with one
            if [[ $line = \1* ]]; then
                encriptar=1
            fi

            pegar $ruta $encriptar
        fi
    fi
done < $FICH

chown -R $USER:$USER $FOGAR

$(pwd)/src/uteis/echo-texto -l $LINGUA -i "final.ok"
