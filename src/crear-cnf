# copiase o ficheiro
cp $(pwd)/cnf $(pwd)/.cnf

echo
echo "Galego (gz)"
echo "English (en)"
echo "Castellano (cas)"
read -p "LANG: " lang
echo

sed -i 's/lang=.*/lang='"$lang"'/g' $(pwd)/.cnf

LINGUA=$($(pwd)/src/uteis/trae-var -v "lang")

$(pwd)/src/uteis/echo-texto -l $LINGUA -i "mensaxe.usuario.indicar_contrasinal"

read -s contrasinal

sed -i 's/passwd=.*/passwd='"$contrasinal"'/g' $(pwd)/.cnf

echo
