#* Script para sacar o texto correcto no idioma correcto.
#* Script to prompt text in the correct language.

FICH="media/i18n.csv"

SEP=$(grep -w "^csv_separator" .cnf | cut -d= -f2)
SEP_CATEX=$(grep -w "^csv_string" .cnf | cut -d= -f2)

while getopts "l:i:" o; do
    case "${o}" in
        l)
            lang=$OPTARG
            ;;
        i)
            id=$OPTARG
            ;;
        #s)
    esac
done

[[ -n $lang && -n id ]]\
    && texto=$(grep ^$id$SEP$lang $FICH | cut -d$SEP_CATEX -f2- | rev | cut -d$SEP_CATEX -f2- | rev)
    # se mete " dentro do string ^

# se hai texto
if [[ -n $texto ]]; then
    precomando=$(echo -e "$texto" | cut -d\\ -f1)
    comando=$(echo -e "$texto" | cut -d\\ -f2)
    poscomando=$(echo -e "$texto" | cut -d\\ -f3-)

    # se o pre e o pos son iguais, non hai comando
    [[ "$precomando" == "$poscomando" ]]\
        && echo -e "$texto"\
        || echo -e "$precomando"$($comando)"$poscomando"
else
    echo -e $(grep ^mensaxe.erro.non_existe$SEP$lang $FICH | cut -d$SEP_CATEX -f2- | rev | cut -d$SEP_CATEX -f2- | rev)
fi
