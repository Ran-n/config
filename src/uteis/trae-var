#* Script para ler o ficheiro de configuraci√≥n e devolver o valor da variable pedida.
#* Script that reads the config file and returns the requested variable.

while getopts "v:" o; do
    case "${o}" in
        v)
            echo $(grep -w "^$OPTARG=.*" $(pwd)/.cnf | cut -d= -f2)
            ;;
    esac
done
